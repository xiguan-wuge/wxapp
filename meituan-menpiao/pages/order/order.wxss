.colonm{
  border-bottom: 1rpx solid #e1e1e1;
  /* padding-bottom: 15rpx; */
}
.player-total-info .player-text{ 
  border-bottom: 1rpx solid #e1e1e1;
  height: 100rpx;
  line-height: 100rpx;
  /* padding-bottom: 15rpx; */
}
.player-total-info .player-text .player-info{
  color: #000;
  font-size: 35rpx;
  margin-right: 321rpx;
  font-weight: bold;
}
.player-total-info .player-text-info{
  line-height: 100%;
  display: inline-block;
  width: 180rpx;  
}
.player-total-info .player-input{
  display: inline-block;
  /* background-color: yellow; */
  position: absolute;
  top: 26rpx;
}
.player-total-info .player-name{
  box-sizing: border-box;
  line-height: 100rpx;
  position: relative;
}
.icon-dis{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.discount-total-info .discount-text{
  height: 100rpx;
  line-height: 100rpx;
}
.discount-total-info .discount-info{
  height: 100rpx;
  line-height: 100rpx;
}
.discount-total-info .discount-info .discount-title{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 35rpx;
  margin-left: 15rpx;
}
.discount-total-info .discount-info .discount-prompt{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  float: right;
  margin-right: 10rpx;
}
.buy-bar{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 5;
  /* background-color: green; */
}
.buy-bar .total-price-box{
  display: inline-block;
  width: 440rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 40rpx;
  float: left;
  position: absolute;
  border-top: 1rpx solid #ccc;
  background-color: yellow;
}
.buy-bar .total-price-box .price-charater{
  color: red;
  font-size: 27rpx;
  margin-left: 20rpx;
}
.buy-bar .total-price-box .price-num{
  color: red;
  font-size: 40rpx;
  font-weight: bold;
}
.buy-bar .total-price-box .price-more{
  display: inline-block;
  /* background-color: yellow; */
  width: 50rpx;
  height: 50rpx;
  float: right;
  margin-top: 35rpx;
  margin-right: 30rpx;
}
.buy-bar .total-price-box .price-more .half-box{
  display: inline-block;
  width: 15rpx;
  height: 15rpx;
  border-top: 2rpx solid #586c94;
  border-left: 2rpx solid #586c94;
  float: right;
  margin-top: 25%;
  margin-right: 25%;
  transform:rotate(45deg);
  /* transform:rotate(225deg); */
}
.buy-bar .summit{
  display: inline-block;
  width: 312rpx;
  height: 100rpx;
  background-color: red;
  color: #fff;
  font-size: 40rpx;
  border-radius: 0;
  float: right;   
}

/* pages/voucher/voucher.wxss */
page{
  background-color: #f2f6fa;
}
.voucher-info{
  margin: 20rpx 20rpx 0 20rpx;
  background-color: #fff;
}
.voucher-info .content{
  overflow: hidden;
  padding: 20rpx;
  background-color: #fff;
  display: flex;
}
.voucher-info .content .image{
  float: left;
  width: 30%;
  height: 200rpx;
  padding: 22rpx 0;
  text-align: center;
  box-sizing: border-box;
  background-color: #f99e7f;
  /* align-items: center;
  justify-content: center; */
}
.voucher-info .content .image .icon-character{
  font-size: 35rpx;
  color: #fff;
}
.voucher-info .content .image .money-num{
  font-size: 75rpx;
  color: #fff;
}
.voucher-info .content .image .voucer-name{
  font-size: 35rpx;
  color: #fff;
}
.voucher-info .content .voucher-text{
  float: right;
  box-sizing: border-box;
  height: 200rpx;
  /* width: 60%; */
  margin-left: 20rpx;
  /* background-color: blue; */
  overflow: hidden;
  flex: 1;
}
.voucher-info .content .voucher-text .voucher-title{
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 40rpx;
  color: #8f9292;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 100%;
}
.voucher-info .content .voucher-text .date{
  font-size: 28rpx;
  color: #8f9292;
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
}
.voucher-info .content .voucher-text .date-prompt{
  font-size: 25rpx;
  color: #f99e7f;
  display: inline-block;
  height: 30rpx;
  line-height: 30rpx;
}
.voucher-info .prompt{
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #d5d8d8;
  padding-left: 20rpx;

}
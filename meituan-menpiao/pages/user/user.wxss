/* pages/user/user.wxss */
page{
  background-color: #f2f6fa;
}
.container{
  width: 100%;
  height: 100%;
  padding: 0;
  background-color: #f0f5f6;
  /* display: flex;
  position: fixed; */
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  background-color: #fff;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #000;
}
.content{
  width: 100%;
  padding: 0 20rpx;
  margin-top: 20rpx;
  background-color: #fff;
  position: relative;
}
.content image{
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
  vertical-align: middle;
  margin-left: 20rpx;
}
.content .item-name{
  height: 120rpx;
  line-height: 120rpx;
  margin-left: 25rpx;
}
.content .more-icon{
  width: 25rpx;
  height: 25rpx;
  border-top: 2rpx solid #8a8a8a;
  border-right: 2rpx solid #8a8a8a;
  position: absolute;
  right: 60rpx;
  top: 48rpx;
  transform: rotate(45deg);
}



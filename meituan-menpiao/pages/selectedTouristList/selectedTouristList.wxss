/* pages/selectedTouristList/selectedTouristList.wxss */
page{
  background-color: #f2f6fa;
  margin: 0;
  padding: 0;
}
view{
  margin: 0;
  padding: 0;
}
.tourist-spot-info{
  width: 750rpx;
  display: flex;
  margin: 0;
  padding: 10rpx 0;
  /* border-bottom: 1rpx solid #ececec; */
  justify-content: space-between;
  background-color: #fff;
}
.tourst-image{
  width: 190rpx;
  height: 180rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}
.tourist-detail-info{
  position: relative;
  background-color: #fff;
  width: 500rpx;
  height: 180rpx;
  /* display: flex; */
  margin: 15rpx;
  /* flex: 1; */
}
.tourist-info-name{
  color: black;
  font-size: 30rpx;
  /* margin-bottom: 10rpx; */
}
.evaluate-level,.evaluate-score{
  color: darkblue;
  font-size: 25rpx;
}
.consume-num{
  font-size: 25rpx;
  color: #888d8e;
}
.unique-feature{
  display: flex;
}
.feature{
  display: inline-block;
  color: #007acc;
  font-size: 23rpx;
  height: 35rpx;
  line-height: 35rpx;
  text-align: center;
  border: 1rpx solid #007acc;
  margin: 5rpx;
  padding: 0 3rpx;
}
.unique-feature .feature:nth-child(1){
  margin-left:0; 
}
.price{
  color: red;
  font-size: 25rpx;
  position: absolute;
  bottom: 10rpx;
  left: 2rpx;
}
.tourist-location{
  font-size: 25rpx;
  color: #888d8e;
  position: absolute;
  bottom: 10rpx;
  right: 25rpx;
}
.to-end{ 
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  color: #888d8e;
  text-align: center;
  background-color: #fff;
}
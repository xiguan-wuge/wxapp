.header{
  justify-content: space-around;
  display: flex;
  align-items: center;
  width: 100%;
  height: 80rpx;
  border-bottom:2rpx solid #e1e1e1;
}
.header-search{ 
  padding: 0 15rpx;
  margin: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  width: 567rpx;
  background:#f0f5f6;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  
}
.header-search .header-search-text{
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 35rpx;
  width:483rpx;
  /* background-color: yellow; */
  
}
.header-search-icon{
  vertical-align: middle;
  width: 30rpx;
  height: 30rpx;
  margin: 5rpx;
}
.clear-input{
  vertical-align: middle;
  width: 35rpx;
  height: 35rpx;
  margin: 5rpx;
}
.header .cancle{
  color: #5bb2f2;
  font-size: 35rpx;
  margin-left: -26rpx;
}
.answer-city{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 40rpx;
  color: #000;
  padding-left: 20rpx;
  border-bottom: 1rpx solid #e1e1e1;
}

